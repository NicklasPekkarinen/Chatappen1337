<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.SignUpActivity"
    android:background="@color/colorPrimaryDark" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:src="@mipmap/chatapplogo3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/relative_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/email"
        android:textColorHint="@color/text_white"
        android:textColor="@color/text_white" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/username"
        android:textColorHint="@color/text_white"
        android:textColor="@color/text_white"
        android:layout_below="@id/edit_email"/>
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="@color/text_white"
        android:textColor="@color/text_white"
        android:layout_below="@id/user_name"/>

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_password"
        android:buttonTint="@color/text_white"
        android:text="@string/show_password_checkbox"
        android:textColor="@color/text_white" />
    </RelativeLayout>


    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="204dp"
        android:layout_height="29dp"
        android:layout_below="@+id/relative_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/sign_up"
        android:onClick="signUp"/>
    <TextView
        android:id="@+id/text_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_login_page"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_sign_up"
        android:layout_marginTop="12dp"
        android:textColor="@color/text_white"
        android:onClick="backToLogin"/>


</RelativeLayout>